#!/bin/bash

usage() {
cat << EOF

Usage: test_ipv6_webserver [ options ] address

options:
  --help, -h       Show help
EOF
	exit ${1:-0}
}

while [[ $# > 0 ]] ; do
	case "$1" in
		--help|-h)
			usage ;;
		-*)
   			echo "!!! Error: Unknown option ${1}. See: test_ipv6_webserver --help"
   			exit 1 ;;

		*)
			break ;;
	esac
done

if [[ -z "$1" ]] ; then
	docker run -i \
		-v "`pwd`"/phantomjs/www:/var/www:ro \
		hasufell/phantomjs
else
	webserver_addr=$1

	docker run -i \
		--env TEST_ADDRESS="$1" \
		--privileged=true \
		-v "`pwd`"/phantomjs/www:/var/www:ro \
		hasufell/phantomjs
fi
